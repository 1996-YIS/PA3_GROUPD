source "https://rubygems.org"  # Ensures gems are fetched from RubyGems

gem "jekyll"                   # The main Jekyll gem
gem "webrick"                  # Required for Ruby 3.0+ (fixes 'webrick not found' errors)

group :jekyll_plugins do
  gem "github-pages", "~> 228", require: "github-pages"
  gem "faraday-retry"
end
